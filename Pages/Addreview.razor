@page "/addreview/{RestaurantId:int}"
@using RestaurantUI.Services
@using RestaurantUI.Models
@inject FakeRestaurantService RestaurantService
@inject NavigationManager Navigation

<h3>Add Review</h3>

@if (restaurant == null)
{
    <p><em>Loading restaurant...</em></p>
}
else
{
    <div class="card p-3 mb-3">
        <h4>@restaurant.Name (@restaurant.CuisineType)</h4>
        <p>Current Rating: @restaurant.Rating</p>
    </div>

    <EditForm Model="newReview" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="reviewer" class="form-label">Your Name</label>
            <InputText id="reviewer" class="form-control" @bind-Value="newReview.Reviewer" />
        </div>

        <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <InputTextArea id="comment" class="form-control" @bind-Value="newReview.Comment" />
        </div>

        <div class="mb-3">
            <label for="rating" class="form-label">Rating (1-5)</label>
            <InputNumber id="rating" class="form-control" @bind-Value="newReview.Rating" />
        </div>

        <button type="submit" class="btn btn-primary">Submit Review</button>
    </EditForm>
}

@code {
    [Parameter]
    public int RestaurantId { get; set; }

    private Restaurant? restaurant;
    private Review newReview = new Review();

    protected override void OnInitialized()
    {
        restaurant = RestaurantService.GetRestaurantById(RestaurantId);
    }

    private void HandleValidSubmit()
    {
        if (restaurant != null)
        {
            newReview.Id = restaurant.Review.Count + 1;
            newReview.RestaurantId = restaurant.Id;

            restaurant.Review.Add(newReview);

            restaurant.Rating = (int)restaurant.Review.Average(r => r.Rating);

            newReview = new Review();

            Navigation.NavigateTo("/dashboard");
        }
    }
}